---
import MainLayout from '../layouts/MainLayout.astro'

const codeText = `// 404 Not Found
    function findPage(url) {
      if (url === 'current_page') {
        throw new Error('Page not found');
      }
      return 'Success';
    }
    
    try {
      findPage('current_page');
    } catch (error) {
      console.error('Error 404:', error.message);
      // Redirecting to home...
    }`
