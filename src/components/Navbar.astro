---
interface NavItem {
  href: string
  text: string
}

const navItems: NavItem[] = [
  { href: '/', text: 'Inicio' },
  { href: '/about', text: 'Acerca de' },
  { href: '/tema01', text: 'Tema 01' }
]

const currentPath = Astro.request.url.split('http://localhost:4321')[1]
console.log(currentPath)
---

<nav class='bg-[#374151] text-white p-4'>
  <ul class='flex flex-col gap-2'>
    {
      navItems.map(item => (
        <li
          class={
            currentPath === item.href
              ? 'text-white w-[218px] hover:bg-gray-800 rounded-lg bg-gray-800'
              : 'text-white w-[218px] hover:bg-gray-800 rounded-lg'
          }
        >
          <a href={item.href} class='block p-2'>
            {item.text}
          </a>
        </li>
      ))
    }
  </ul>
</nav>
